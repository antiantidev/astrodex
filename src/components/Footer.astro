---
import { SITE_CONFIG } from "../site.config";
const baseUrl = import.meta.env.BASE_URL;
---

<footer class="border-t border-border-muted py-12 md:py-16 bg-midnight">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center gap-10 md:gap-8">
      <div class="flex flex-col items-center md:items-start gap-3 text-center md:text-left">
        <div class="text-[9px] md:text-[10px] tracking-[0.2em] md:tracking-[0.3em] uppercase text-text-dim font-bold">
          {SITE_CONFIG.footer.copyright}
        </div>
        <div class="text-[8px] md:text-[9px] text-text-ghost uppercase tracking-widest font-medium">
          {SITE_CONFIG.footer.builtWithText}
        </div>
      </div>
      
      <div class="flex flex-wrap justify-center items-center gap-6 md:gap-8">
        <a href={`${baseUrl}privacy`} class="text-[9px] md:text-[10px] tracking-[0.2em] uppercase text-text-dim hover:text-white transition-colors font-bold">Privacy</a>
        <a href={SITE_CONFIG.links.github} class="text-[9px] md:text-[10px] tracking-[0.2em] uppercase text-text-dim hover:text-white transition-colors font-bold">GitHub</a>
        <a href={SITE_CONFIG.links.sponsor} class="group flex items-center gap-2.5 px-5 py-2.5 rounded-full border border-white/20 bg-white/5 text-[9px] font-black uppercase tracking-widest text-text-muted hover:bg-white hover:text-black transition-all shadow-lg hover:shadow-white/10">
          <i class="fa-solid fa-heart animate-pulse group-hover:text-red-500 transition-colors"></i>
          Sponsor
        </a>
      </div>
    </div>
  </div>
</footer>