---
import Link from "../ui/Link.astro";

interface Props {
  items: {
    label: string;
    href?: string;
    icon?: string;
    isActive?: boolean;
  }[];
  className?: string;
}

const { items, className = "" } = Astro.props;
---

<nav class={`flex items-center flex-wrap gap-y-2.5 gap-x-2 text-[13px] md:text-[14px] font-medium text-text-dim leading-snug ${className}`}>
  {items.map((item, index) => (
    <div class="flex items-center gap-2">
      {index > 0 && <span class="text-border-muted flex-shrink-0 opacity-40">/</span>}
      {item.href ? (
        <Link href={item.href} class="hover:text-white transition-colors flex items-center gap-1.5 whitespace-nowrap flex-shrink-0 py-1">
          {item.icon && <i class={item.icon + " text-[14px] md:text-[15px] opacity-70"}></i>}
          <span class="tracking-tight">{item.label}</span>
        </Link>
      ) : (
        <div class={`flex items-center gap-1.5 min-w-0 py-1 ${item.isActive ? "text-text-main font-bold" : ""}`}>
          {item.icon && <i class={item.icon + " text-[14px] md:text-[15px] flex-shrink-0 opacity-70"}></i>}
          <span class="truncate max-w-[140px] xs:max-w-[200px] sm:max-w-[300px] md:max-w-none tracking-tight">
            {item.label}
          </span>
        </div>
      )}
    </div>
  ))}
</nav>