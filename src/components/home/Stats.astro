---
import { SITE_CONFIG } from "../../site.config";

interface Props {
  totalProjects: number;
  totalArticles: number;
  lighthouseScore: string;
  buildTime: string;
}

const { totalProjects, totalArticles, lighthouseScore, buildTime } =
  Astro.props;
const baseUrl = import.meta.env.BASE_URL;
---

<section class="py-12 md:py-16 border-t border-border-muted">
  <div class="container mx-auto px-6">
    <div
      class="relative overflow-hidden rounded-[2rem] border border-white/5 bg-white/[0.01] p-8 md:p-12"
    >
      <!-- Subtle Background Glow -->
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-white/[0.02] blur-[100px] rounded-full pointer-events-none"
      >
      </div>

      <div class="relative z-10 flex flex-col items-center text-center">
        <div
          class="inline-flex items-center gap-2 px-3 py-1 rounded-full border border-white/10 bg-white/[0.02] mb-6"
        >
          <span class="w-1 h-1 rounded-full bg-white opacity-50"></span>
          <span
            class="text-[9px] font-black uppercase tracking-[0.2em] text-text-dim"
            >Project Metrics</span
          >
        </div>

        <h2
          class="text-2xl md:text-4xl font-black text-text-main mb-4 tracking-tighter uppercase leading-tight"
        >
          The Master <br class="hidden md:block" /> Documentation Hub.
        </h2>

        <p
          class="text-text-muted max-w-xl mx-auto mb-10 text-sm md:text-base leading-relaxed font-light"
        >
          Efficiency is at our core. Join an ever-growing ecosystem built for
          precision and absolute clarity.
        </p>

        <!-- Refined Stats Grid -->
        <div
          class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8 mb-12 w-full max-w-3xl"
        >
          <div class="flex flex-col items-center p-2">
            <div
              class="text-xl md:text-3xl font-black text-text-main mb-1 tracking-tight"
            >
              {totalProjects}
            </div>
            <div
              class="text-[8px] md:text-[9px] font-black uppercase tracking-[0.2em] text-text-dim"
            >
              Projects
            </div>
          </div>
          <div class="flex flex-col items-center p-2">
            <div
              class="text-xl md:text-3xl font-black text-text-main mb-1 tracking-tight"
            >
              {totalArticles}
            </div>
            <div
              class="text-[8px] md:text-[9px] font-black uppercase tracking-[0.2em] text-text-dim"
            >
              Articles
            </div>
          </div>
          <div class="flex flex-col items-center p-2">
            <div
              class="text-xl md:text-3xl font-black text-text-main mb-1 tracking-tight"
            >
              {lighthouseScore}
            </div>
            <div
              class="text-[8px] md:text-[9px] font-black uppercase tracking-[0.2em] text-text-dim"
            >
              Lighthouse
            </div>
          </div>
          <div class="flex flex-col items-center p-2">
            <div
              class="text-xl md:text-3xl font-black text-text-main mb-1 tracking-tight"
            >
              {buildTime}
            </div>
            <div
              class="text-[8px] md:text-[9px] font-black uppercase tracking-[0.2em] text-text-dim"
            >
              Build Time
            </div>
          </div>
        </div>

        <!-- Action Group -->
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href={SITE_CONFIG.links.github}
            class="group px-8 py-3 rounded-full bg-white text-black text-[10px] font-black uppercase tracking-[0.2em] hover:bg-zinc-200 transition-all shadow-lg hover:shadow-white/10 flex items-center gap-3"
          >
            <i class="fa-brands fa-github text-sm"></i> Use Template
          </a>
          <a
            href={`${baseUrl}docs/astrodex-base/v1.0.1/getting-started/contribution-flow`}
            class="px-8 py-3 rounded-full border border-white/10 text-text-main text-[10px] font-black uppercase tracking-[0.2em] hover:bg-white/5 transition-all flex items-center gap-3"
          >
            Setup Guide
          </a>
        </div>
      </div>
    </div>
  </div>
</section>