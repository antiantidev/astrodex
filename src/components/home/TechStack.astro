---
const tech = [
    { name: 'Astro 5', icon: 'fa-solid fa-rocket' },
    { name: 'Tailwind v4', icon: 'fa-solid fa-wind' },
    { name: 'TypeScript', icon: 'fa-brands fa-js' },
    { name: 'Zod', icon: 'fa-solid fa-shield-halved' },
    { name: 'Mermaid', icon: 'fa-solid fa-diagram-project' },
    { name: 'GitHub', icon: 'fa-brands fa-github' }
];
---

<section class="py-12 border-y border-border-subtle bg-white/[0.01]">
    <div class="container mx-auto px-6">
        <div class="flex flex-wrap justify-center items-center gap-8 md:gap-16 lg:gap-24 opacity-40 hover:opacity-100 transition-opacity duration-700">
            {tech.map(item => (
                <div class="flex items-center gap-3 grayscale hover:grayscale-0 transition-all cursor-default group">
                    <i class={`${item.icon} text-xl md:text-2xl text-text-muted group-hover:text-white`}></i>
                    <span class="text-[10px] md:text-xs font-black uppercase tracking-[0.3em] text-text-dim group-hover:text-white">
                        {item.name}
                    </span>
                </div>
            ))}
        </div>
    </div>
</section>