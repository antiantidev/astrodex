<div class="feedback-container mt-16 pt-8 border-t border-white/[0.03]">
  <div class="flex flex-col sm:flex-row items-center justify-between gap-6 bg-white/[0.02] border border-white/5 rounded-3xl p-8">
    <div>
      <h4 class="text-sm font-bold text-white mb-1">Was this page helpful?</h4>
      <p class="text-[10px] text-slate-500 uppercase tracking-widest font-bold">Your feedback helps us improve</p>
    </div>
    
    <div class="flex items-center gap-3" id="feedback-buttons">
      <button data-type="yes" class="flex items-center gap-2 px-5 py-2.5 rounded-xl border border-white/10 hover:border-emerald-500/50 hover:bg-emerald-500/10 text-slate-400 hover:text-emerald-400 transition-all group">
        <i class="fa-regular fa-thumbs-up group-active:scale-125 transition-transform"></i>
        <span class="text-[10px] font-bold uppercase tracking-widest">Yes</span>
      </button>
      <button data-type="no" class="flex items-center gap-2 px-5 py-2.5 rounded-xl border border-white/10 hover:border-red-500/50 hover:bg-red-500/10 text-slate-400 hover:text-red-400 transition-all group">
        <i class="fa-regular fa-thumbs-down group-active:scale-125 transition-transform"></i>
        <span class="text-[10px] font-bold uppercase tracking-widest">No</span>
      </button>
    </div>

    <div id="feedback-success" class="hidden text-center sm:text-right">
      <p class="text-primary-400 text-[10px] font-black uppercase tracking-[0.2em] flex items-center gap-2">
        <i class="fa-solid fa-circle-check"></i>
        Thank you for your feedback!
      </p>
    </div>
  </div>
</div>

<script is:inline>
  const buttons = document.getElementById('feedback-buttons');
  const success = document.getElementById('feedback-success');
  const actionBtns = buttons?.querySelectorAll('button');

  actionBtns?.forEach(btn => {
    btn.addEventListener('click', () => {
      // Here you would normally send data to an API
      buttons.classList.add('hidden');
      success.classList.remove('hidden');
      
      const type = btn.getAttribute('data-type');
      console.log(`Feedback received: ${type}`);
    });
  });
</script>
